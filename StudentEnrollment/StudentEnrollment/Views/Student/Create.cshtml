@using StudentEnrollment.Models
@model StudentEnrollment.Models.Student

<h1>Create Student</h1>

<form asp-action="Create">

	<label asp-for="Name">Student Name: </label>
	<input asp-for="Name" />


	<label asp-for="SpyAlias">Spy Alias: </label>
	<input asp-for="SpyAlias" />


	<label asp-for="Course">Course </label>
	@(Html.DropDownListFor(m => m.CourseId, new SelectList((IEnumerable<Course>)ViewData["Courses"], "ID", "Name", "Level", "Category")))

	<input type="submit" value="Create" />
</form>
